<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/home_bottom_ll"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/home_buttom_one_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_buttom_home_tb"
                android:src="@mipmap/ic_tab_home_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/home_buttom_home_tv"
                android:text="指南"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_below="@id/home_buttom_home_tb"
                android:layout_alignLeft="@id/home_buttom_home_tb"
                android:layout_alignRight="@id/home_buttom_home_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home_buttom_two_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_buttom_select_tb"
                android:src="@mipmap/ic_tab_select_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/home_buttom_select_tv"
                android:text="热门"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:layout_below="@id/home_buttom_select_tb"
                android:layout_alignLeft="@id/home_buttom_select_tb"
                android:layout_alignRight="@id/home_buttom_select_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home_buttom_three_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_buttom_category_tb"
                android:src="@mipmap/ic_tab_category_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/home_buttom_category_tv"
                android:text="分类"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/home_buttom_category_tb"
                android:layout_alignLeft="@id/home_buttom_category_tb"
                android:layout_alignRight="@id/home_buttom_category_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/home_buttom_four_rl"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/home_buttom_profile_tb"
                android:src="@mipmap/ic_tab_profile_normal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/home_buttom_profile_tv"
                android:text="我的"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/home_buttom_profile_tb"
                android:layout_alignLeft="@id/home_buttom_profile_tb"
                android:layout_alignRight="@id/home_buttom_profile_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/home_top_rl"
        android:layout_above="@id/home_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>


</RelativeLayout>