<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp"
    android:layout_alignParentTop="true"
    >
<RelativeLayout
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty"
    android:background="@color/colorred"
    >
    <ImageView
        android:id="@+id/top_left_iv"
        android:src="@mipmap/btn_signin"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/top_left_back_iv"
        android:src="@mipmap/ic_action_back"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/top_name_tv"
        android:layout_centerInParent="true"
        android:textSize="@dimen/twenty"
        android:textColor="@color/colorwhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/top_right_iv"
        android:src="@mipmap/ic_menu_search"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:layout_marginRight="@dimen/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/top_right_share_iv"
        android:src="@mipmap/ic_menu_share"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

</RelativeLayout>